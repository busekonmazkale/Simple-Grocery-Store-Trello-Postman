		{
			"name": "Create a board",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"pm.test(\"Board creation successful\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.collectionVariables.set(\"boardId\", jsonData.id);",
							"",
							"pm.test(\"Board is created\", function () {",
							"    pm.expect(jsonData.name).to.eql('Learning Postman ' +  pm.collectionVariables.get('boardNumber'));",
							"});",
							"",
							"pm.test(\"Board is open\", function () {",
							"    pm.expect(jsonData.closed).to.eql(false);",
							"});",
							"",
							"pm.test(\"Calendar is disable\", function () {",
							"    const calendarView = jsonData.prefs.switcherViews.find(view => view.viewType === 'Calendar');",
							"    pm.expect(calendarView.enabled).to.be.false;",
							"    ",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"let boardNumber = pm.collectionVariables.get('boardNumber');",
							"boardNumber++;",
							"pm.collectionVariables.set(\"boardNumber\", boardNumber);",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
